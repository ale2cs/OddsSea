generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model lines {
  line_id    Int     @id @default(autoincrement())
  market_id  Int
  sportsbook String
  home_odds  Float
  away_odds  Float
  created_at String
  markets    markets @relation(fields: [market_id], references: [market_id], onDelete: Cascade, onUpdate: NoAction, map: "fk_market_id")
}

model markets {
  market_id Int     @id @default(autoincrement())
  name      String
  type      String
  period    Int     @db.SmallInt
  date      String
  home_team String
  away_team String
  spov      String
  spun      String
  lines     lines[]

  @@unique([name, type, period, spov, spun], map: "unique_market")
}
